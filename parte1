/* Script abaixo */



function calcularINSS() {
    const salarioBruto = document.getElementById('salarioBruto').value
    
    var resultado = document.getElementById('resultado')
    
    if (salarioBruto == "") {
        alert("Por favor, digite um sal치rio.")
        return
    }
    
    const salarioBrutoFloat = parseFloat(document.getElementById('salarioBruto').value)
    let desconto = 0

    if (salarioBrutoFloat <= 1412) {
        desconto = salarioBrutoFloat * 0.075
    } else if (salarioBrutoFloat <= 2666.68) {
        desconto = (salarioBrutoFloat - 1412) * 0.09 + 105.90
    } else if (salarioBrutoFloat <= 4000.03) {
        desconto = (salarioBrutoFloat - 2666.69) * 0.12 + 218.82
    } else if (salarioBrutoFloat <= 7786.02) {
        desconto = (salarioBrutoFloat - 4000.04) * 0.14 + 378.82
    } else {
        desconto = 908.86
    }
    resultado.innerHTML = `O seu sal치rio de R$${salarioBrutoFloat.toFixed(2)} receber치 um desconto no INSS de R$${desconto.toFixed(2)}`
}


